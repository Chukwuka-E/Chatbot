{
    "compilerOptions": {
      "target": "ES2020",                     
      "module": "commonjs",                  
      "lib": ["ES2020"],                     
      "outDir": "./dist",                    
      "rootDir": "./src",                    
      "strict": true,                        
      "moduleResolution": "node",            
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  